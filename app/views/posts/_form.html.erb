<%= form_for @post, html: { multipart: true } do |f| %>

<div class="field">
    <%= f.label :image %>
    <%= f.file_field :image%>
</div>

  <br>

<div class="field">
  <%= f.label :description %>
  <%= f.text_area :description %>
</div>

  <br>
  
<div class="actions">
  <%= f.submit %>
</div>

<%end%>
